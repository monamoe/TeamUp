<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.EditProfilePage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/profilepic"
                android:layout_width="131dp"
                android:layout_height="134dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="136dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="144dp"
                android:src="@drawable/logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="126dp"
                    android:layout_height="wrap_content"
                    android:text="User Name: " />

                <TextView
                    android:id="@+id/userNameEdit"
                    android:layout_width="235dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="User"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/dateJoined"
                    android:layout_width="126dp"
                    android:layout_height="wrap_content"
                    android:text="Joined:" />

                <TextView
                    android:id="@+id/dateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Date"
                    android:textStyle="italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingEnd="10dp">

                <TextView
                    android:id="@+id/favSport"
                    android:layout_width="126dp"
                    android:layout_height="wrap_content"
                    android:text="Favourite Sport:" />

                <RadioGroup
                    android:id="@+id/favSportGroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/noneBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="None" />

                    <RadioButton
                        android:id="@+id/soccerBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Soccer" />

                    <RadioButton
                        android:id="@+id/ballHockeyBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ball Hockey" />

                    <RadioButton
                        android:id="@+id/basketballBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Basketball" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:paddingTop="20dp"
                android:paddingEnd="10dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="About Me:" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textLayout"
                    android:layout_width="255dp"
                    android:layout_height="200dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="250">

                    <EditText
                        android:id="@+id/aboutMeEdit"
                        android:layout_width="250dp"
                        android:layout_height="160dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="start|top"
                        android:hint="Max 250 Characters"
                        android:inputType="textMultiLine"
                        android:textSize="12sp" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <Button
                android:id="@+id/saveBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="156dp"
                android:onClick="onSave"
                android:text="Save"
                android:textAlignment="center" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>