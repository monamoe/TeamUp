<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.helloteam.sportsbuddyapp">

    <uses-permission android:name="android.permission.WAKE_LOCK" /> <!-- Getting User Location Permission -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" /> <!-- running map on physical devices -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logoteamup"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logoteamup"
        android:supportsRtl="true"
        android:theme="@style/Theme.SportsBuddyApp"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".views.CreateEvent"
            android:exported="true"
            android:label="@string/title_activity_create_event"
            android:theme="@style/Theme.SportsBuddyApp" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_key" />

        <activity
            android:name=".views.LandingPage2"
            android:exported="true"
            android:label="LandingPage"
            android:theme="@style/Theme.SportsBuddyApp" />
        <activity
            android:name=".views.ChatLogActivity"
            android:exported="true" />
        <activity
            android:name=".views.NewMessageActivity"
            android:exported="true" />
        <activity
            android:name=".views.LatestMessagesActivity"
            android:exported="true" />
        <activity
            android:name=".views.EventInviteActivity"
            android:exported="true" />
        <activity
            android:name=".views.ViewMemberProfileActivity"
            android:exported="true" />
        <activity
            android:name=".views.TeamInvites"
            android:exported="true" />
        <activity
            android:name=".views.TeamsActivity"
            android:exported="true" />
        <activity android:name=".views.HostEvents" />
        <activity android:name=".views.ViewPlayerEvents" />
        <activity android:name=".views.eventslist" />
        <activity android:name=".views.event" />
        <activity android:name=".views.CreateEventActivity" />
        <activity android:name=".views.ProfilePage" />
        <activity android:name=".views.EditProfilePage" />
        <activity android:name=".views.RegisterActivity" />
        <activity android:name=".views.LoginActivity"></activity>
        <activity android:name=".views.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.map"
            android:label="@string/title_activity_maps" />
    </application>

</manifest>